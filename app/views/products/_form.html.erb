<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control form-control-lg"%>
  </div>

  <div class="form-group">
    <%= form.label :desc %>
    <%= form.text_field :desc, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <p>Select Categories</p>
  <%= form.select(:categories, @categories.collect {|p| [ p.name, p.id ] },
               { :prompt => "Please select"},
               { :multiple => true, :size => @categories.count + 1 }) %>
  </div>
  <div class="form-group">
    <%= form.label :images %>
    <%= form.file_field :images %>
  </div>
  <% if @product.images.present? %>
    <%= image_tag @product.images_url, :class => "image-thumb" %>
  <% end %>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
