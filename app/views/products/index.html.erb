<h1>Products</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Images</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.desc[0..30] %>...</td>
        <td><%= image_tag product.images_url, :class => "image-thumb" if product.images?%></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-info" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, :class => "btn btn-primary" %>
