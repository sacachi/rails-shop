- if shop_account_signed_in?
  %h1 Welcome #{current_shop_account.email}
  %li= link_to "Logout", destroy_shop_account_session_path, :method => :delete
- else
  - @categories.each do |category|
    - unless category.products.blank?
      .category
        %h3= category.name
        .row
          - category.products.each do |product|
            .col-lg-4.col-md-4.mb-12
              .card.h-100
                - unless product.images.blank?
                  = link_to image_tag(product.images_url, class:  "card-img-top", height: 200,  width: 200), product_path(product)
                .card-body
                  %h4.card-title
                    = link_to product.name, product_path(product), class: "col-6"
                    .col-6= product.price
                %span.buy--btn ADD TO CART
